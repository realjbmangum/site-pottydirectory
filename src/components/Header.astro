---
import siteConfig from '../data/site-config.json';
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <span class="text-2xl">ðŸš½</span>
        <span class="text-xl font-bold text-primary-600">{siteConfig.name}</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-6">
        <a href="/" class="text-gray-600 hover:text-primary-600 transition-colors">
          Home
        </a>
        <a href="/states" class="text-gray-600 hover:text-primary-600 transition-colors">
          Browse by State
        </a>
        <a href="/services" class="text-gray-600 hover:text-primary-600 transition-colors">
          Services
        </a>
        <a href="/about" class="text-gray-600 hover:text-primary-600 transition-colors">
          About
        </a>
        <a href="/contact" class="text-gray-600 hover:text-primary-600 transition-colors">
          Contact
        </a>
        <a
          href="/submit"
          class="bg-primary-600 text-white px-4 py-2 rounded-lg hover:bg-primary-700 transition-colors"
        >
          Add Your Business
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-gray-600 hover:text-primary-600"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t">
    <div class="px-4 py-4 space-y-3">
      <a href="/" class="block text-gray-600 hover:text-primary-600">Home</a>
      <a href="/states" class="block text-gray-600 hover:text-primary-600">Browse by State</a>
      <a href="/services" class="block text-gray-600 hover:text-primary-600">Services</a>
      <a href="/about" class="block text-gray-600 hover:text-primary-600">About</a>
      <a href="/contact" class="block text-gray-600 hover:text-primary-600">Contact</a>
      <a href="/submit" class="block bg-primary-600 text-white px-4 py-2 rounded-lg text-center">
        Add Your Business
      </a>
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
