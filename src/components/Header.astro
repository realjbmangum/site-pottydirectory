---
import siteConfig from '../data/site-config.json';
---

<header id="site-header" class="bg-white/95 backdrop-blur-sm shadow-sm sticky top-0 z-50 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <img src="/images/PottyDirectory_Logo.png" alt={siteConfig.name} class="h-12 w-auto" />
        <span class="text-xl font-bold font-display tracking-wide" style="color: #138d57;">{siteConfig.name}</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-6">
        <a href="/states/" class="text-gray-600 hover:text-primary-600 transition-colors">
          Browse States
        </a>
        <a href="/calculator/" class="text-gray-600 hover:text-primary-600 transition-colors">
          Calculator
        </a>
        <a href="/pricing/" class="text-gray-600 hover:text-primary-600 transition-colors">
          Pricing
        </a>
        <a href="/blog/" class="text-gray-600 hover:text-primary-600 transition-colors">
          Blog
        </a>
        <a href="/faq/" class="text-gray-600 hover:text-primary-600 transition-colors">
          FAQ
        </a>
        <a
          href="/submit/"
          class="bg-primary-600 text-white px-4 py-2 rounded-lg hover:bg-primary-700 transition-colors"
        >
          Add Your Business
        </a>
      </nav>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-gray-600 hover:text-primary-600"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t">
    <div class="px-4 py-4 space-y-3">
      <a href="/" class="block text-gray-600 hover:text-primary-600">Home</a>
      <a href="/states/" class="block text-gray-600 hover:text-primary-600">Browse States</a>
      <a href="/calculator/" class="block text-gray-600 hover:text-primary-600">Calculator</a>
      <a href="/pricing/" class="block text-gray-600 hover:text-primary-600">Pricing</a>
      <a href="/blog/" class="block text-gray-600 hover:text-primary-600">Blog</a>
      <a href="/faq/" class="block text-gray-600 hover:text-primary-600">FAQ</a>
      <a href="/contact/" class="block text-gray-600 hover:text-primary-600">Contact</a>
      <a href="/submit/" class="block bg-primary-600 text-white px-4 py-2 rounded-lg text-center">
        Add Your Business
      </a>
    </div>
  </div>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const header = document.getElementById('site-header');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Add enhanced blur effect on scroll
  window.addEventListener('scroll', () => {
    if (window.scrollY > 10) {
      header?.classList.add('shadow-md', 'bg-white/90');
      header?.classList.remove('shadow-sm', 'bg-white/95');
    } else {
      header?.classList.remove('shadow-md', 'bg-white/90');
      header?.classList.add('shadow-sm', 'bg-white/95');
    }
  });
</script>

<script>
  const header = document.getElementById('main-header');
  let lastScrollY = window.scrollY;

  window.addEventListener('scroll', () => {
    const currentScrollY = window.scrollY;
    
    if (currentScrollY > 10) {
      header?.classList.add('bg-white/80', 'backdrop-blur-md', 'shadow-lg');
    } else {
      header?.classList.remove('bg-white/80', 'backdrop-blur-md', 'shadow-lg');
    }
    
    lastScrollY = currentScrollY;
  });

  // Mobile menu toggle (existing)
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
