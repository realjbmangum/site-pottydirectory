---
interface Props {
  placeholder?: string;
  class?: string;
}

const { placeholder = 'Search by city or state...', class: className = '' } = Astro.props;
---

<form action="/search" method="GET" class={`relative ${className}`}>
  <div class="relative">
    <input
      type="text"
      name="q"
      placeholder={placeholder}
      class="w-full pl-12 pr-4 py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors text-lg"
    />
    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </div>
  </div>
  <button
    type="submit"
    class="absolute right-2 top-1/2 -translate-y-1/2 bg-primary-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-primary-700 transition-colors"
  >
    Search
  </button>
</form>
