---
import siteConfig from '../data/site-config.json';
import states from '../data/states.json';

const currentYear = new Date().getFullYear();
const popularStates = states.slice(0, 10);
---

<footer class="bg-gray-900 text-gray-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <span class="text-2xl">ðŸš½</span>
          <h3 class="text-xl font-bold text-white">{siteConfig.name}</h3>
        </div>
        <p class="text-gray-400 mb-4 max-w-md">
          {siteConfig.tagline}. Find trusted portable restroom rental companies for construction, events, weddings, and more.
        </p>
        {siteConfig.contact.email && (
          <a
            href={`mailto:${siteConfig.contact.email}`}
            class="text-primary-400 hover:text-primary-300"
          >
            {siteConfig.contact.email}
          </a>
        )}
      </div>

      <!-- Popular States -->
      <div>
        <h4 class="text-white font-semibold mb-4">Popular States</h4>
        <ul class="space-y-2">
          {popularStates.map((state) => (
            <li>
              <a
                href={`/state/${state.slug}`}
                class="text-gray-400 hover:text-white transition-colors"
              >
                {state.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Links -->
      <div>
        <h4 class="text-white font-semibold mb-4">Links</h4>
        <ul class="space-y-2">
          <li>
            <a href="/states" class="text-gray-400 hover:text-white transition-colors">
              All States
            </a>
          </li>
          <li>
            <a href="/services" class="text-gray-400 hover:text-white transition-colors">
              Services
            </a>
          </li>
          <li>
            <a href="/about" class="text-gray-400 hover:text-white transition-colors">
              About Us
            </a>
          </li>
          <li>
            <a href="/contact" class="text-gray-400 hover:text-white transition-colors">
              Contact
            </a>
          </li>
          <li>
            <a href="/submit" class="text-gray-400 hover:text-white transition-colors">
              Add Your Business
            </a>
          </li>
          <li>
            <a href="/privacy" class="text-gray-400 hover:text-white transition-colors">
              Privacy Policy
            </a>
          </li>
          <li>
            <a href="/terms" class="text-gray-400 hover:text-white transition-colors">
              Terms of Service
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-500 text-sm">
      <p>&copy; {currentYear} {siteConfig.name}. All rights reserved.</p>
    </div>
  </div>
</footer>
