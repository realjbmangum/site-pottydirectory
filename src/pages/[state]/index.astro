---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import AdSlot from '../../components/AdSlot.astro';
import states from '../../data/states.json';
import topCities from '../../data/top-cities.json';
import { getCitiesByState } from '../../lib/supabase';
import { citySlug } from '../../lib/utils';

export function getStaticPaths() {
  return states.map((state) => ({
    params: { state: state.slug },
    props: { state }
  }));
}

const { state } = Astro.props;

// Get cities with vendors from database
let citiesWithVendors: { city: string; count: number }[] = [];
try {
  citiesWithVendors = await getCitiesByState(state.name);
} catch (error) {
  console.error('Error fetching cities:', error);
}

// Create a map of vendor counts by city
const vendorCountMap = new Map(citiesWithVendors.map(c => [c.city, c.count]));

// Get top cities for this state and merge with vendor data
const stateTopCities = (topCities as Record<string, string[]>)[state.name] || [];
const allCities = stateTopCities.map(city => ({
  city,
  count: vendorCountMap.get(city) || 0
}));

// Add any cities with vendors that aren't in top 20
citiesWithVendors.forEach(cv => {
  if (!stateTopCities.includes(cv.city)) {
    allCities.push(cv);
  }
});

// Sort: cities with vendors first (by count desc), then alphabetically
allCities.sort((a, b) => {
  if (a.count > 0 && b.count === 0) return -1;
  if (a.count === 0 && b.count > 0) return 1;
  if (a.count !== b.count) return b.count - a.count;
  return a.city.localeCompare(b.city);
});

const totalVendors = citiesWithVendors.reduce((sum, c) => sum + c.count, 0);
const citiesWithProviders = citiesWithVendors.length;

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'States', href: '/states' },
  { label: state.name }
];
---

<BaseLayout
  title={`Porta Potty Rentals in ${state.name} | Find Local Providers`}
  description={`Find portable restroom rental companies in ${state.name}. Browse ${totalVendors} verified providers across ${allCities.length} cities for construction, events, weddings, and more.`}
>
  <!-- Hero -->
  <section class="relative min-h-[350px] flex items-center overflow-hidden">
    <div class="absolute inset-0">
      <img src="/images/herotile.jpeg" alt="" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-gradient-to-r from-slate-900/95 via-primary-900/90 to-slate-900/80"></div>
      <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-slate-900/50"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 w-full">
      <Breadcrumb items={breadcrumbs} />
      <div class="mt-6">
        <div class="inline-flex items-center bg-white/10 backdrop-blur-sm rounded-full px-4 py-2 mb-4">
          <svg class="w-5 h-5 text-primary-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span class="text-sm font-medium">{state.abbr} Directory</span>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">
          Porta Potty Rentals in {state.name}
        </h1>
        <p class="text-xl text-blue-100 max-w-2xl mb-6">
          {totalVendors > 0
            ? `Browse ${totalVendors} portable restroom ${totalVendors === 1 ? 'provider' : 'providers'} across ${citiesWithProviders} ${citiesWithProviders === 1 ? 'city' : 'cities'} in ${state.name}`
            : `Find porta potty rental companies in ${allCities.length} cities across ${state.name}`}
        </p>
        <div class="flex flex-wrap gap-6 text-sm">
          <div class="flex items-center bg-white/10 backdrop-blur-sm rounded-lg px-4 py-2">
            <span class="text-2xl font-bold text-white mr-2">{totalVendors}</span>
            <span class="text-blue-200">Providers</span>
          </div>
          <div class="flex items-center bg-white/10 backdrop-blur-sm rounded-lg px-4 py-2">
            <span class="text-2xl font-bold text-white mr-2">{citiesWithProviders}</span>
            <span class="text-blue-200">Cities</span>
          </div>
          <div class="flex items-center bg-white/10 backdrop-blur-sm rounded-lg px-4 py-2">
            <span class="text-2xl font-bold text-white mr-2">{allCities.length}</span>
            <span class="text-blue-200">Total Areas</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Ad -->
    <div class="mb-8">
      <AdSlot slot="header" />
    </div>

    <!-- Filter/View Bar -->
    <div class="bg-gradient-to-r from-brand-50 to-emerald-50 rounded-xl border border-brand-200 p-4 mb-6 shadow-sm">
      <div class="flex flex-wrap items-center justify-between gap-4">
        <!-- Search Filter -->
        <div class="relative flex-1 min-w-[200px] max-w-sm">
          <input
            type="text"
            id="city-search"
            placeholder="Filter cities..."
            class="w-full pl-10 pr-4 py-2 border-2 rounded-lg focus:ring-2 focus:outline-none text-sm bg-white shadow-md" style="border-color: oklch(26.6% 0.065 152.934); --tw-ring-color: oklch(26.6% 0.065 152.934);"
          />
          <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </div>

        <!-- Sort & Filter Controls -->
        <div class="flex items-center gap-3">
          <div class="flex items-center gap-2">
            <label for="city-sort" class="text-sm text-gray-600 whitespace-nowrap">Sort:</label>
            <select
              id="city-sort"
              class="px-3 py-2 border-2 rounded-lg focus:ring-2 focus:outline-none text-sm bg-white shadow-md" style="border-color: oklch(26.6% 0.065 152.934); --tw-ring-color: oklch(26.6% 0.065 152.934);"
            >
              <option value="providers">Most Providers</option>
              <option value="name">Name (A-Z)</option>
              <option value="name-desc">Name (Z-A)</option>
            </select>
          </div>

          <label class="inline-flex items-center cursor-pointer bg-white border-2 rounded-lg px-3 py-2 shadow-md potty-toggle" style="border-color: oklch(26.6% 0.065 152.934);">
            <input type="checkbox" id="has-providers" class="sr-only peer">
            <div class="relative w-8 h-4 bg-gray-300 peer-focus:outline-none peer-focus:ring-2 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-3 after:w-3 after:transition-all peer-checked:bg-[--potty-green]" style="--tw-ring-color: oklch(26.6% 0.065 152.934); --potty-green: oklch(26.6% 0.065 152.934);"></div>
            <span class="ms-2 text-sm text-gray-700">Has Providers</span>
          </label>
        </div>
      </div>
      <p id="city-results" class="text-sm text-gray-600 mt-3">Showing all {allCities.length} cities</p>
    </div>

    <!-- Cities Grid -->
    <div id="cities-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5">
      {allCities.map((cityData) => (
        <a
          href={`/${state.slug}/${citySlug(cityData.city)}`}
          class={`city-card group bg-white rounded-xl border p-5 shadow-sm hover:shadow-lg transition-all duration-200 ${
            cityData.count > 0
              ? 'border-primary-200 hover:border-primary-400'
              : 'border-gray-200 hover:border-gray-300'
          }`}
          data-name={cityData.city.toLowerCase()}
          data-count={cityData.count}
        >
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-lg font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">
                {cityData.city}
              </h2>
              <p class="text-gray-500 text-sm mt-0.5">{state.abbr}</p>
            </div>
            <div class="text-right">
              {cityData.count > 0 ? (
                <>
                  <span class="text-2xl font-bold text-primary-600">{cityData.count}</span>
                  <p class="text-xs text-gray-500">{cityData.count === 1 ? 'provider' : 'providers'}</p>
                </>
              ) : (
                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                  Coming soon
                </span>
              )}
            </div>
          </div>
          <div class="mt-3 flex items-center text-primary-600 text-sm font-medium opacity-0 group-hover:opacity-100 transition-opacity">
            <span>{cityData.count > 0 ? 'View providers' : 'View city'}</span>
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </a>
      ))}
    </div>

    <!-- CTA for businesses -->
    <div class="mt-12 bg-gradient-to-r from-primary-50 to-blue-50 rounded-xl p-8 border border-primary-100">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Own a Porta Potty Rental Business in {state.name}?</h3>
          <p class="text-gray-600">Get listed in our directory and reach customers searching for portable restrooms.</p>
        </div>
        <a
          href="/submit"
          class="inline-flex items-center bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors whitespace-nowrap"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
          </svg>
          Add Your Business
        </a>
      </div>
    </div>

    <!-- Bottom Ad -->
    <div class="mt-12">
      <AdSlot slot="footer" />
    </div>
  </div>
</BaseLayout>

<script define:vars={{ totalCities: allCities.length }}>
  const searchInput = document.getElementById('city-search');
  const sortSelect = document.getElementById('city-sort');
  const hasProvidersCheckbox = document.getElementById('has-providers');
  const resultsText = document.getElementById('city-results');
  const citiesGrid = document.getElementById('cities-grid');
  const cityCards = Array.from(citiesGrid?.querySelectorAll('.city-card') || []);

  function updateFilters() {
    const query = searchInput?.value?.toLowerCase() || '';
    const sortBy = sortSelect?.value || 'providers';
    const onlyWithProviders = hasProvidersCheckbox?.checked || false;

    let visibleCount = 0;

    cityCards.forEach(card => {
      const name = card.dataset.name || '';
      const count = parseInt(card.dataset.count || '0');

      const matchesSearch = name.includes(query);
      const matchesProviders = !onlyWithProviders || count > 0;
      const isVisible = matchesSearch && matchesProviders;

      card.style.display = isVisible ? '' : 'none';
      if (isVisible) visibleCount++;
    });

    // Sort
    const sortedCards = cityCards
      .filter(card => card.style.display !== 'none')
      .sort((a, b) => {
        const nameA = a.dataset.name || '';
        const nameB = b.dataset.name || '';
        const countA = parseInt(a.dataset.count || '0');
        const countB = parseInt(b.dataset.count || '0');

        switch (sortBy) {
          case 'providers':
            if (countA !== countB) return countB - countA;
            return nameA.localeCompare(nameB);
          case 'name':
            return nameA.localeCompare(nameB);
          case 'name-desc':
            return nameB.localeCompare(nameA);
          default:
            return 0;
        }
      });

    sortedCards.forEach((card, index) => {
      card.style.order = String(index);
    });

    if (resultsText) {
      resultsText.textContent = visibleCount === totalCities
        ? `Showing all ${totalCities} cities`
        : `Showing ${visibleCount} of ${totalCities} cities`;
    }
  }

  searchInput?.addEventListener('input', updateFilters);
  sortSelect?.addEventListener('change', updateFilters);
  hasProvidersCheckbox?.addEventListener('change', updateFilters);
</script>
