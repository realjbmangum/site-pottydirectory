---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';
import AdSlot from '../../../components/AdSlot.astro';
import { getVendors } from '../../../lib/supabase';
import { formatPhone, ensureHttps, citySlug } from '../../../lib/utils';
import states from '../../../data/states.json';

export async function getStaticPaths() {
  let vendors = [];
  try {
    vendors = await getVendors();
  } catch (error) {
    console.error('Error fetching vendors:', error);
  }

  return vendors.map((vendor) => {
    const stateInfo = states.find(s => s.name === vendor.state);
    return {
      params: {
        state: stateInfo?.slug || vendor.state.toLowerCase().replace(/\s+/g, '-'),
        city: citySlug(vendor.city),
        vendor: vendor.slug
      },
      props: { vendor, stateInfo }
    };
  });
}

const { vendor, stateInfo } = Astro.props;
const stateSlug = stateInfo?.slug || vendor.state.toLowerCase().replace(/\s+/g, '-');
const citySlugValue = citySlug(vendor.city);

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: vendor.state, href: `/${stateSlug}` },
  { label: vendor.city, href: `/${stateSlug}/${citySlugValue}` },
  { label: vendor.business_name }
];
---

<BaseLayout
  title={`${vendor.business_name} | Porta Potty Rentals in ${vendor.city}, ${stateInfo?.abbr || vendor.state}`}
  description={`${vendor.business_name} provides portable restroom rentals in ${vendor.city}, ${vendor.state}. Services: ${vendor.services_offered.join(', ')}. Call ${formatPhone(vendor.phone)} for a quote.`}
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <Breadcrumb items={breadcrumbs} />

    <!-- Main Content Card -->
    <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
      <!-- Header -->
      <div class="relative bg-gradient-to-br from-primary-600 via-primary-700 to-blue-800 text-white p-8 md:p-10">
        <div class="absolute inset-0 bg-black/10"></div>
        <div class="relative flex items-start justify-between">
          <div>
            <h1 class="text-3xl md:text-4xl font-bold mb-3">{vendor.business_name}</h1>
            <p class="text-blue-100 flex items-center text-lg">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              {vendor.city}, {stateInfo?.abbr || vendor.state}
            </p>
          </div>
          <div class="hidden md:block text-7xl opacity-20">ðŸš½</div>
        </div>
      </div>

      <!-- Body -->
      <div class="p-8 md:p-10">
        <!-- Quick Contact -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
          {vendor.phone && (
            <a
              href={`tel:${vendor.phone}`}
              class="flex items-center p-5 bg-gradient-to-r from-green-50 to-emerald-50 rounded-xl border border-green-200 hover:border-green-300 transition-colors group"
            >
              <div class="bg-green-500 text-white p-3 rounded-xl mr-4 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500 font-medium">Call Now</p>
                <p class="text-xl font-bold text-gray-900">{formatPhone(vendor.phone)}</p>
              </div>
            </a>
          )}

          {vendor.website && (
            <a
              href={ensureHttps(vendor.website)}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center p-5 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl border border-blue-200 hover:border-blue-300 transition-colors group"
            >
              <div class="bg-blue-500 text-white p-3 rounded-xl mr-4 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500 font-medium">Website</p>
                <p class="text-xl font-bold text-gray-900">Visit Site â†’</p>
              </div>
            </a>
          )}
        </div>

        <!-- Services -->
        <div class="mb-10">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Services Offered</h2>
          <div class="flex flex-wrap gap-3">
            {vendor.services_offered.map((service) => (
              <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-gradient-to-r from-primary-50 to-blue-50 text-primary-700 border border-primary-200">
                <svg class="w-4 h-4 mr-2 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {service}
              </span>
            ))}
          </div>
        </div>

        <!-- CTA -->
        <div class="bg-gradient-to-r from-gray-50 to-slate-50 rounded-xl p-6 border border-gray-200">
          <h3 class="font-bold text-gray-900 text-lg mb-2">Ready to Get a Quote?</h3>
          <p class="text-gray-600 mb-4">
            Contact {vendor.business_name} directly to discuss your portable restroom rental needs
            and get pricing for your project or event.
          </p>
          <div class="flex flex-wrap gap-3">
            {vendor.phone && (
              <a
                href={`tel:${vendor.phone}`}
                class="inline-flex items-center bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                Call {formatPhone(vendor.phone)}
              </a>
            )}
            {vendor.website && (
              <a
                href={ensureHttps(vendor.website)}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center border-2 border-gray-300 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-white hover:border-gray-400 transition-colors"
              >
                Visit Website
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Schema Markup -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": vendor.business_name,
      "description": `Portable restroom rentals in ${vendor.city}, ${vendor.state}. Services: ${vendor.services_offered.join(', ')}.`,
      "address": {
        "@type": "PostalAddress",
        "addressLocality": vendor.city,
        "addressRegion": vendor.state,
        "addressCountry": "US"
      },
      "telephone": vendor.phone,
      "url": vendor.website,
      "areaServed": {
        "@type": "City",
        "name": vendor.city
      }
    })} />

    <!-- Ad -->
    <div class="mt-8">
      <AdSlot slot="footer" />
    </div>
  </div>
</BaseLayout>
