---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumb from '../../../components/Breadcrumb.astro';
import AdSlot from '../../../components/AdSlot.astro';
import { getVendors } from '../../../lib/supabase';
import { formatPhone, ensureHttps, citySlug } from '../../../lib/utils';
import states from '../../../data/states.json';

export async function getStaticPaths() {
  let vendors = [];
  try {
    vendors = await getVendors();
  } catch (error) {
    console.error('Error fetching vendors:', error);
  }

  return vendors.map((vendor) => {
    const stateInfo = states.find(s => s.name === vendor.state);
    return {
      params: {
        state: stateInfo?.slug || vendor.state.toLowerCase().replace(/\s+/g, '-'),
        city: citySlug(vendor.city),
        vendor: vendor.slug
      },
      props: { vendor, stateInfo }
    };
  });
}

const { vendor, stateInfo } = Astro.props;
const stateSlug = stateInfo?.slug || vendor.state.toLowerCase().replace(/\s+/g, '-');
const citySlugValue = citySlug(vendor.city);
const rating = vendor.rating || 0;
const reviewCount = vendor.review_count || 0;
const hasAddress = vendor.street_address || vendor.postal_code;

// Parse hours if it's a JSON string
let parsedHours = null;
if (vendor.hours) {
  if (typeof vendor.hours === 'string') {
    try {
      parsedHours = JSON.parse(vendor.hours);
    } catch (e) {
      console.error('Failed to parse hours:', e);
    }
  } else if (typeof vendor.hours === 'object') {
    parsedHours = vendor.hours;
  }
}

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: vendor.state, href: `/${stateSlug}` },
  { label: vendor.city, href: `/${stateSlug}/${citySlugValue}` },
  { label: vendor.business_name }
];
