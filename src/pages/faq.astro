---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import StructuredData from '../components/StructuredData.astro';
import { getPublishedFAQs, type ContentQuestion } from '../lib/supabase';

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'FAQ' }
];

// Fetch published FAQs from Supabase
let faqData: ContentQuestion[] = [];
let fetchError = '';

try {
  faqData = await getPublishedFAQs('potty');
} catch (e) {
  fetchError = e instanceof Error ? e.message : 'Failed to load FAQs';
  console.error('FAQ fetch error:', e);
}

// Group FAQs by category
const faqsByCategory = faqData.reduce((acc, faq) => {
  const category = faq.category || 'General';
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push({
    q: faq.question,
    a: faq.answer_short || ''
  });
  return acc;
}, {} as Record<string, { q: string; a: string }[]>);

// Convert to array format for rendering
const faqs = Object.entries(faqsByCategory).map(([category, questions]) => ({
  category: category.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase()),
  questions
}));

// Build FAQ schema for Google rich results
const allQuestions = faqs.flatMap(cat => cat.questions);
const faqSchemaData = {
  mainEntity: allQuestions.map(faq => ({
    '@type': 'Question',
    name: faq.q,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.a.replace(/<[^>]*>/g, '') // Strip HTML for schema
    }
  }))
};
---

<BaseLayout
  title="Porta Potty Rental FAQ | Common Questions Answered"
  description="Get answers to frequently asked questions about porta potty rentals. Learn about costs, servicing, delivery, and how to choose the right portable restroom."
>
  <StructuredData type="FAQPage" data={faqSchemaData} />
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <Breadcrumb items={breadcrumbs} />

    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Frequently Asked Questions
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Everything you need to know about renting portable restrooms for events, construction sites, and more.
      </p>
    </div>

    {fetchError && (
      <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-8">
        Error loading FAQs: {fetchError}
      </div>
    )}

    {faqs.length === 0 && !fetchError && (
      <div class="bg-yellow-50 border border-yellow-200 text-yellow-700 px-4 py-3 rounded-lg mb-8 text-center">
        No FAQs published yet. Check back soon!
      </div>
    )}

    {faqs.length > 0 && (
      <>
        <!-- Quick Links -->
        <div class="bg-gradient-to-r from-brand-50 to-emerald-50 rounded-xl p-6 mb-10 border border-brand-200 shadow-sm">
          <h2 class="text-sm font-semibold text-brand-500 uppercase tracking-wide mb-3">Jump to Section</h2>
          <div class="flex flex-wrap gap-2">
            {faqs.map((section) => (
              <a
                href={`#${section.category.toLowerCase().replace(/\s+/g, '-')}`}
                class="px-4 py-2 bg-white border border-brand-200 rounded-lg text-sm font-medium text-gray-700 hover:border-brand-500 hover:bg-brand-50 hover:text-brand-600 transition-colors shadow-sm"
              >
                {section.category}
              </a>
            ))}
          </div>
        </div>

        <!-- FAQ Sections -->
        {faqs.map((section) => (
          <div class="mb-12" id={section.category.toLowerCase().replace(/\s+/g, '-')}>
            <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
              <span class="w-2 h-8 bg-primary-500 rounded-full mr-3"></span>
              {section.category}
            </h2>
            <div class="space-y-4">
              {section.questions.map((faq) => (
                <details class="group bg-white rounded-xl border border-gray-200 overflow-hidden shadow-sm">
                  <summary class="flex items-center justify-between p-5 cursor-pointer hover:bg-gray-50 transition-colors">
                    <h3 class="font-semibold text-gray-900 pr-4">{faq.q}</h3>
                    <span class="flex-shrink-0 ml-4 text-gray-400 group-open:rotate-180 transition-transform">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                      </svg>
                    </span>
                  </summary>
                  <div class="px-5 pb-5 text-gray-600 border-t border-gray-100 pt-4 prose prose-sm max-w-none" set:html={faq.a} />
                </details>
              ))}
            </div>
          </div>
        ))}
      </>
    )}

    <!-- Still Have Questions CTA -->
    <div class="bg-gradient-to-br from-primary-600 to-blue-700 rounded-2xl p-8 text-center text-white mt-12">
      <h2 class="text-2xl font-bold mb-4">Still Have Questions?</h2>
      <p class="text-blue-100 mb-6 max-w-xl mx-auto">
        Contact local providers for specific pricing and availability, or use our tools to plan your rental.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/calculator" class="inline-flex items-center justify-center bg-white text-primary-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors">
          Calculate Your Needs
        </a>
        <a href="/contact" class="inline-flex items-center justify-center border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white/10 transition-colors">
          Contact Us
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  details[open] summary {
    background-color: #f9fafb;
  }

  .prose a {
    color: #2563eb;
    text-decoration: underline;
  }

  .prose a:hover {
    color: #1d4ed8;
  }
</style>
