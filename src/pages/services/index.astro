---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import categories from '../../data/categories.json';

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Services' }
];

const useCases = categories.filter(c => c.type === 'use-case');
const equipment = categories.filter(c => c.type === 'equipment');
---

<BaseLayout
  title="Porta Potty Services | Find the Right Rental for Your Needs"
  description="Explore porta potty rental services for construction, events, weddings, emergencies, and more. Find the perfect portable restroom solution for any occasion."
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <Breadcrumb items={breadcrumbs} />

    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Porta Potty Services
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Find the right portable restroom solution for your specific needs
      </p>
    </div>

    <!-- Use Cases -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
        <span class="w-2 h-8 bg-primary-500 rounded-full mr-3"></span>
        By Use Case
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {useCases.map((category) => (
          <ServiceCard
            name={category.name}
            slug={category.slug}
            description={category.description}
            icon={category.icon}
          />
        ))}
      </div>
    </div>

    <!-- Equipment Types -->
    {equipment.length > 0 && (
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
          <span class="w-2 h-8 bg-green-500 rounded-full mr-3"></span>
          Equipment Types
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {equipment.map((category) => (
            <ServiceCard
              name={category.name}
              slug={category.slug}
              description={category.description}
              icon={category.icon}
            />
          ))}
        </div>
      </div>
    )}

    <!-- CTA -->
    <div class="bg-gradient-to-br from-primary-600 to-blue-700 rounded-2xl p-8 md:p-12 text-center text-white">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Not Sure What You Need?</h2>
      <p class="text-blue-100 mb-8 max-w-xl mx-auto">
        Use our calculator to estimate how many units you need, or check out our pricing guide for cost information.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/calculator/"
          class="inline-flex items-center justify-center bg-white text-primary-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors"
        >
          Porta Potty Calculator
        </a>
        <a
          href="/pricing/"
          class="inline-flex items-center justify-center border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white/10 transition-colors"
        >
          Pricing Guide
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
