---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import states from '../data/states.json';

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Search' }
];

// Pass states data and Supabase config to client
const statesData = states;
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
---

<BaseLayout
  title="Search | Potty Directory"
  description="Search for portable restroom rental companies across the United States."
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <Breadcrumb items={breadcrumbs} />

    <div class="mb-10">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Search Providers
      </h1>

      <!-- Client-side search input -->
      <div class="relative max-w-2xl bg-gradient-to-r from-brand-50 to-emerald-50 p-4 rounded-xl border border-brand-200 shadow-sm">
        <div class="relative">
          <input
            type="text"
            id="search-input"
            placeholder="Search by business name, city, or state..."
            class="w-full pl-12 pr-4 py-4 bg-white text-gray-900 border border-brand-200 rounded-xl focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-colors text-lg placeholder:text-gray-400 shadow-sm"
            autofocus
          />
          <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
            <svg class="w-6 h-6 text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Results count -->
    <p id="results-count" class="text-gray-600 mb-6 hidden"></p>

    <!-- Results grid -->
    <div id="results-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6"></div>

    <!-- Empty state -->
    <div id="empty-state" class="bg-gray-50 rounded-xl p-8 text-center">
      <img src="/images/PottyDirectory_Logo.png" alt="" class="w-16 h-16 mx-auto mb-4" />
      <h2 class="text-xl font-semibold text-gray-900 mb-2">Find Portable Restroom Rentals</h2>
      <p class="text-gray-600">
        Start typing to search our directory of providers.
      </p>
    </div>

    <!-- Loading state -->
    <div id="loading-state" class="bg-gray-50 rounded-xl p-8 text-center hidden">
      <div class="animate-spin w-8 h-8 border-4 border-primary-600 border-t-transparent rounded-full mx-auto mb-4"></div>
      <p class="text-gray-600">Searching...</p>
    </div>

    <!-- No results state -->
    <div id="no-results" class="bg-gray-50 rounded-xl p-8 text-center hidden">
      <div class="text-5xl mb-4">üîç</div>
      <h2 class="text-xl font-semibold text-gray-900 mb-2">No Results Found</h2>
      <p class="text-gray-600 mb-6">
        Try searching for a different city, state, or business name.
      </p>
      <a
        href="/states/"
        class="inline-flex items-center bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors"
      >
        Browse All States
      </a>
    </div>
  </div>

  <script define:vars={{ statesData, supabaseUrl, supabaseKey }}>
    const searchInput = document.getElementById('search-input');
    const resultsGrid = document.getElementById('results-grid');
    const resultsCount = document.getElementById('results-count');
    const emptyState = document.getElementById('empty-state');
    const noResults = document.getElementById('no-results');
    const loadingState = document.getElementById('loading-state');

    let searchTimeout = null;

    function slugify(text) {
      return text.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
    }

    function getStateInfo(stateName) {
      const state = statesData.find(s => s.name === stateName);
      return {
        slug: state?.slug || stateName.toLowerCase().replace(/\s+/g, '-'),
        abbr: state?.abbr || stateName
      };
    }

    function hideAllStates() {
      emptyState.classList.add('hidden');
      noResults.classList.add('hidden');
      loadingState.classList.add('hidden');
      resultsCount.classList.add('hidden');
    }

    function renderResults(vendors) {
      hideAllStates();

      if (vendors.length === 0) {
        resultsGrid.innerHTML = '';
        noResults.classList.remove('hidden');
        return;
      }

      resultsCount.classList.remove('hidden');
      resultsCount.textContent = `Found ${vendors.length} result${vendors.length === 1 ? '' : 's'}`;

      resultsGrid.innerHTML = vendors.map(vendor => {
        const stateInfo = getStateInfo(vendor.state);
        const url = `/${stateInfo.slug}/${slugify(vendor.city)}/${vendor.slug}`;
        const rating = vendor.rating || 0;
        const reviewCount = vendor.review_count || 0;

        return `
          <article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <div class="p-6">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">
                    <a href="${url}" class="hover:text-primary-600 transition-colors">
                      ${vendor.business_name}
                    </a>
                  </h3>
                  <p class="text-gray-500 text-sm mt-1">
                    ${vendor.city}, ${stateInfo.abbr}
                  </p>
                  ${rating > 0 ? `
                    <div class="flex items-center mt-2">
                      <div class="flex items-center">
                        ${[1,2,3,4,5].map(star => `
                          <svg class="w-4 h-4 ${star <= Math.round(rating) ? 'text-yellow-400' : 'text-gray-300'}" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                          </svg>
                        `).join('')}
                      </div>
                      <span class="ml-2 text-sm text-gray-600">${rating.toFixed(1)}</span>
                      ${reviewCount > 0 ? `<span class="ml-1 text-sm text-gray-400">(${reviewCount})</span>` : ''}
                    </div>
                  ` : ''}
                </div>
                <span class="text-3xl">üöΩ</span>
              </div>
              <div class="flex gap-3">
                <a href="${url}" class="flex-1 text-center bg-primary-600 text-white py-2 px-4 rounded-lg text-sm font-medium hover:bg-primary-700 transition-colors">
                  View Details
                </a>
                ${vendor.website ? `
                  <a href="${vendor.website}" target="_blank" rel="noopener noreferrer" class="px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 transition-colors">
                    Website
                  </a>
                ` : ''}
              </div>
            </div>
          </article>
        `;
      }).join('');
    }

    async function search(query) {
      if (!query || query.length < 2) {
        resultsGrid.innerHTML = '';
        hideAllStates();
        emptyState.classList.remove('hidden');
        return;
      }

      hideAllStates();
      loadingState.classList.remove('hidden');

      try {
        // Query Supabase directly with ilike for fuzzy search
        const response = await fetch(
          `${supabaseUrl}/rest/v1/potty?or=(business_name.ilike.*${encodeURIComponent(query)}*,city.ilike.*${encodeURIComponent(query)}*,state.ilike.*${encodeURIComponent(query)}*)&order=rating.desc.nullslast&limit=50`,
          {
            headers: {
              'apikey': supabaseKey,
              'Authorization': `Bearer ${supabaseKey}`
            }
          }
        );

        if (!response.ok) throw new Error('Search failed');

        const vendors = await response.json();
        renderResults(vendors);
      } catch (error) {
        console.error('Search error:', error);
        hideAllStates();
        noResults.classList.remove('hidden');
      }
    }

    // Check for query param on load
    const urlParams = new URLSearchParams(window.location.search);
    const initialQuery = urlParams.get('q') || '';
    if (initialQuery) {
      searchInput.value = initialQuery;
      search(initialQuery);
    }

    // Debounced live search on input
    searchInput.addEventListener('input', (e) => {
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => {
        search(e.target.value);
      }, 300);
    });
  </script>
</BaseLayout>
