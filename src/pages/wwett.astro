        </div>

        <!-- Services Offered -->
        <div>
          <label class="block text-sm font-bold text-slate-700 mb-3">
            Services Offered (check all that apply)
          </label>
          <div class="grid md:grid-cols-3 gap-4">
            <label class="flex items-center gap-2 p-3 bg-slate-50 rounded-lg hover:bg-slate-100 cursor-pointer">
              <input type="checkbox" name="services" value="Standard Units" class="w-5 h-5 text-blue-600"/>
