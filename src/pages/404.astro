---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Page Not Found"
  description="Oops! The page you're looking for doesn't exist."
>
  <div class="min-h-[60vh] flex items-center justify-center px-4">
    <div class="text-center max-w-lg">
      <!-- Toilet icon -->
      <div class="text-8xl mb-6">ðŸš½</div>

      <!-- Fun headline -->
      <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4 font-display">
        Well, This Is Awkward
      </h1>

      <!-- Tagline -->
      <p class="text-xl text-primary-600 font-semibold mb-4">
        This page has been flushed.
      </p>

      <!-- Explanation -->
      <p class="text-gray-600 mb-8">
        Looks like the page you're looking for is out of service.
        Don't worry, it happens to the best of us.
      </p>

      <!-- Actions -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="btn-primary inline-flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Back to Home
        </a>
        <a
          href="/states/"
          class="btn-secondary inline-flex items-center justify-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          Find a Rental
        </a>
      </div>

      <!-- Error code (subtle) -->
      <p class="text-gray-400 text-sm mt-12">
        Error 404 â€” Unit Not Found
      </p>
    </div>
  </div>
</BaseLayout>
