---
import BaseLayout from '../layouts/BaseLayout.astro';
import SearchBar from '../components/SearchBar.astro';
import StateCard from '../components/StateCard.astro';
import ServiceCard from '../components/ServiceCard.astro';
import VendorCard from '../components/VendorCard.astro';
import AdSlot from '../components/AdSlot.astro';
import siteConfig from '../data/site-config.json';
import states from '../data/states.json';
import categories from '../data/categories.json';
import { getFeaturedVendors, getVendorCountByState, getSiteStats } from '../lib/supabase';
import { citySlug } from '../lib/utils';

// Get data
let featuredVendors = [];
let stateCounts: Record<string, number> = {};
let siteStats = { providers: 0, states: 0, avgRating: '0' };

try {
  featuredVendors = await getFeaturedVendors(6);
  stateCounts = await getVendorCountByState();
  siteStats = await getSiteStats();
} catch (error) {
  console.error('Error fetching data:', error);
}

// Get popular states (those with most providers)
const statesWithCounts = states.map(state => ({
  ...state,
  count: stateCounts[state.name] || 0
})).sort((a, b) => b.count - a.count);

const popularStates = statesWithCounts.slice(0, 12);

// Helper to get state slug from vendor
function getStateSlug(stateName: string) {
  const state = states.find(s => s.name === stateName);
  return state?.slug || stateName.toLowerCase().replace(/\s+/g, '-');
}
---

<BaseLayout>
  <!-- Hero Section with Photo Background -->
  <section class="relative min-h-[600px] flex items-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src="/images/herotile.jpeg"
        alt="Porta potty pattern background"
        class="w-full h-full object-cover"
      />
      <!-- Clean gradient overlay -->
      <div class="absolute inset-0 bg-gradient-to-b from-primary-900/85 to-blue-900/90"></div>
    </div>

    <!-- Content -->
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-28 text-center text-white">
      <!-- Badge -->
      <div class="inline-flex items-center bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 mb-8">
        <span class="text-2xl mr-2">ðŸš½</span>
        <span class="text-sm font-medium">The #1 Porta Potty Directory</span>
      </div>

      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
        {siteConfig.tagline}
      </h1>
      <p class="text-xl md:text-2xl text-blue-100 mb-10 max-w-3xl mx-auto leading-relaxed">
        The largest directory of portable restroom rental companies across the United States
      </p>

      <!-- Stats with glassmorphism -->
      <div class="flex justify-center gap-6 md:gap-12 mb-12">
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl px-6 py-4 border border-white/20">
          <div class="text-3xl md:text-4xl font-bold">{siteStats.providers.toLocaleString()}</div>
          <div class="text-blue-200 text-sm">Verified Providers</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl px-6 py-4 border border-white/20">
          <div class="text-3xl md:text-4xl font-bold">{siteStats.states}</div>
          <div class="text-blue-200 text-sm">States Covered</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl px-6 py-4 border border-white/20">
          <div class="text-3xl md:text-4xl font-bold">{siteStats.avgRating}â˜…</div>
          <div class="text-blue-200 text-sm">Avg. Rating</div>
        </div>
      </div>

      <SearchBar
        placeholder="Search by city or state..."
        class="max-w-2xl mx-auto"
      />

      <!-- Trust indicators -->
      <div class="mt-10 flex justify-center items-center gap-6 text-blue-200 text-sm">
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Free to Search
        </div>
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Verified Listings
        </div>
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Nationwide Coverage
        </div>
      </div>
    </div>
  </section>

  <!-- Ad Banner -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <AdSlot slot="header" />
  </div>

  <!-- Services Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-14">
        <span class="inline-block bg-primary-100 text-primary-700 text-sm font-semibold px-4 py-1.5 rounded-full mb-4">Our Services</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Porta Potty Services</h2>
        <p class="text-gray-600 max-w-2xl mx-auto text-lg">
          Find the right portable restroom solution for your needs
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {categories.map((category) => (
          <ServiceCard
            name={category.name}
            slug={category.slug}
            description={category.description}
            icon={category.icon}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Vendors Section -->
  {featuredVendors.length > 0 && (
    <section class="py-20 bg-gradient-to-b from-gray-50 to-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-14">
          <span class="inline-block bg-green-100 text-green-700 text-sm font-semibold px-4 py-1.5 rounded-full mb-4">Trusted Providers</span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Featured Providers</h2>
          <p class="text-gray-600 text-lg">Top-rated porta potty rental companies</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {featuredVendors.map((vendor) => (
            <VendorCard
              vendor={vendor}
              stateSlug={getStateSlug(vendor.state)}
              citySlug={citySlug(vendor.city)}
            />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Browse by State Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-10">
        <div class="mb-4 md:mb-0">
          <span class="inline-block bg-blue-100 text-blue-700 text-sm font-semibold px-4 py-1.5 rounded-full mb-4">Nationwide Coverage</span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">Browse by State</h2>
          <p class="text-gray-600">Find porta potty providers in your area</p>
        </div>
        <a href="/states" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium group">
          View All States
          <svg class="w-5 h-5 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
        {popularStates.map((state) => (
          <StateCard
            name={state.name}
            abbr={state.abbr}
            slug={state.slug}
            count={state.count}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="relative overflow-hidden bg-gradient-to-br from-primary-600 via-primary-700 to-blue-800 rounded-2xl p-8 md:p-12 text-center text-white shadow-xl">
        <!-- Decorative elements -->
        <div class="absolute top-0 left-0 w-40 h-40 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2"></div>
        <div class="absolute bottom-0 right-0 w-60 h-60 bg-white/5 rounded-full translate-x-1/3 translate-y-1/3"></div>
        <img src="/images/PottyDirectory_Logo.png" alt="Potty Directory" class="absolute top-1/2 right-10 -translate-y-1/2 w-32 h-32 opacity-15" />

        <div class="relative">
          <h2 class="text-2xl md:text-3xl font-bold mb-4">
            Own a Porta Potty Rental Business?
          </h2>
          <p class="text-blue-100 mb-8 max-w-xl mx-auto">
            Get listed on Potty Directory and reach thousands of customers looking for portable restroom rentals.
          </p>
          <a
            href="/submit"
            class="inline-flex items-center bg-white text-primary-600 px-8 py-4 rounded-2xl font-semibold hover:bg-blue-50 transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Add Your Business Free
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer Ad -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-8">
    <AdSlot slot="footer" />
  </div>
</BaseLayout>
