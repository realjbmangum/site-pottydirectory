---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdSlot from '../../components/AdSlot.astro';
import { getVendors, getVendorBySlug } from '../../lib/supabase';
import { formatPhone, ensureHttps } from '../../lib/utils';
import states from '../../data/states.json';

export async function getStaticPaths() {
  let vendors = [];
  try {
    vendors = await getVendors();
  } catch (error) {
    console.error('Error fetching vendors:', error);
  }

  return vendors.map((vendor) => ({
    params: { slug: vendor.slug },
    props: { vendor }
  }));
}

const { vendor } = Astro.props;

const state = states.find(s => s.name === vendor.state);
---

<BaseLayout
  title={`${vendor.business_name} - Porta Potty Rentals in ${vendor.city}, ${vendor.state}`}
  description={`${vendor.business_name} provides portable restroom rentals in ${vendor.city}, ${vendor.state}. Services: ${vendor.services_offered.join(', ')}.`}
>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm">
      <a href="/" class="text-gray-500 hover:text-primary-600">Home</a>
      <span class="mx-2 text-gray-400">/</span>
      <a href="/states" class="text-gray-500 hover:text-primary-600">States</a>
      <span class="mx-2 text-gray-400">/</span>
      {state && (
        <>
          <a href={`/state/${state.slug}`} class="text-gray-500 hover:text-primary-600">{vendor.state}</a>
          <span class="mx-2 text-gray-400">/</span>
        </>
      )}
      <span class="text-gray-900">{vendor.business_name}</span>
    </nav>

    <!-- Main Content -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <!-- Header -->
      <div class="bg-primary-600 text-white p-8">
        <div class="flex items-start justify-between">
          <div>
            <h1 class="text-3xl font-bold mb-2">{vendor.business_name}</h1>
            <p class="text-blue-100 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              {vendor.city}, {vendor.state}
            </p>
          </div>
          <span class="text-6xl">ðŸš½</span>
        </div>
      </div>

      <!-- Body -->
      <div class="p-8">
        <!-- Contact Info -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          {vendor.phone && (
            <div class="flex items-center">
              <div class="bg-primary-100 text-primary-600 p-3 rounded-lg mr-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500">Phone</p>
                <a href={`tel:${vendor.phone}`} class="text-lg font-semibold text-gray-900 hover:text-primary-600">
                  {formatPhone(vendor.phone)}
                </a>
              </div>
            </div>
          )}

          {vendor.website && (
            <div class="flex items-center">
              <div class="bg-primary-100 text-primary-600 p-3 rounded-lg mr-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500">Website</p>
                <a href={ensureHttps(vendor.website)} target="_blank" rel="noopener noreferrer" class="text-lg font-semibold text-gray-900 hover:text-primary-600">
                  Visit Website
                </a>
              </div>
            </div>
          )}
        </div>

        <!-- Services -->
        <div class="mb-8">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Services Offered</h2>
          <div class="flex flex-wrap gap-2">
            {vendor.services_offered.map((service) => (
              <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                {service}
              </span>
            ))}
          </div>
        </div>

        <!-- CTA -->
        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="font-semibold text-gray-900 mb-2">Ready to Rent?</h3>
          <p class="text-gray-600 mb-4">
            Contact {vendor.business_name} directly to get a quote for your porta potty rental needs.
          </p>
          <div class="flex gap-4">
            {vendor.phone && (
              <a
                href={`tel:${vendor.phone}`}
                class="bg-primary-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-primary-700 transition-colors"
              >
                Call Now
              </a>
            )}
            {vendor.website && (
              <a
                href={ensureHttps(vendor.website)}
                target="_blank"
                rel="noopener noreferrer"
                class="border border-gray-300 text-gray-700 px-6 py-2 rounded-lg font-medium hover:bg-gray-50 transition-colors"
              >
                Visit Website
              </a>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Schema Markup -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": vendor.business_name,
      "address": {
        "@type": "PostalAddress",
        "addressLocality": vendor.city,
        "addressRegion": vendor.state,
        "addressCountry": "US"
      },
      "telephone": vendor.phone,
      "url": vendor.website
    })} />

    <!-- Ad -->
    <div class="mt-8">
      <AdSlot slot="footer" />
    </div>
  </div>
</BaseLayout>
